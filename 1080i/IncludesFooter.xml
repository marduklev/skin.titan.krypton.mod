	<include name="AltRatingFooter">
        <!--Advanced Ratings + Studio-->       
		<control type="grouplist">
			<orientation>horizontal</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<right>10</right>
			<align>right</align>			
			<!-- studio -->				
			<control type="image" id="414783">				
				<bottom>-5</bottom>
				<width>400</width>
				<height>110</height>
				<aspectratio aligny="center" align="right">keep</aspectratio>
				<visible>[[Window.IsActive(videos) + Skin.HasSetting(StudioInFooter)] | [Window.IsActive(home) + Skin.String(HomeLayout,netflix2) + Skin.HasSetting(NetflixHomeStudio)]]</visible>
				<visible>!Control.IsVisible(527)</visible>
				<include>studiologo_image</include>
				<bordersize>1</bordersize>
			</control>				
			<!-- meta -->
			<control type="group">		
				<left>2</left>  
				<bottom>15</bottom>
				<width>70</width>
				<height>70</height>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.MetaCritic.Rating)) + Skin.HasSetting(RTRatingInFooter)</visible>					
				<include>MetaCriticRating</include>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.RottenTomatoes.Meter)) + Skin.HasSetting(RTRatingInFooter)</visible>		
			</control>				
			<!-- Tomatometer -->
			<control type="group">	
				<left>2</left>
				<bottom>15</bottom>
				<width>70</width>
				<height>70</height>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.RottenTomatoes.Meter)) + Skin.HasSetting(RTRatingInFooter)</visible>						
	 			<include>TomatoMeter</include>														
			</control>				
			<!-- Tomatoaudience -->
			<control type="group">					
				<left>2</left>
				<bottom>15</bottom>
				<width>70</width>
				<height>70</height>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.RottenTomatoes.UserMeter)) + Skin.HasSetting(RTRatingInFooter)</visible>					
				<include>TomatoAudience</include>
			</control>				
			<!-- tmdb -->				
			<control type="group">
				<left>8</left>
				<bottom>15</bottom>
				<width>70</width>
				<height>70</height>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Rating.TMDB)) + Skin.HasSetting(TV_TMdbRatingInFooter)</visible>					
				<include>TMdb_footer</include>
			</control>				
			<!-- tvdb -->
			<control type="group">					
				<left>15</left>
				<bottom>15</bottom>
				<width>70</width>
				<height>70</height>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Rating.TVDB)) + Skin.HasSetting(TV_TMdbRatingInFooter)</visible> 					
				<include>TVdb_footer</include>
			</control>				
			<!-- imdb -->
			<control type="group">					
				<left>8</left>
				<bottom>15</bottom>
				<width>90</width>
				<height>70</height>
				<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Rating.IMDB)) + Skin.HasSetting(IMDBRatingInFooter)</visible>					
				<include>Imdb</include>
			</control>
