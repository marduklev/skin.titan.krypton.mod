						<left>30</left>
						<top>20</top>
						<width>218</width>
						<height>312</height>
						<animation effect="fade" start="0" end="60" time="0" reversible="false" condition="true">Conditional</animation>
						<include>PosterPanelLayout</include>
					</control>
