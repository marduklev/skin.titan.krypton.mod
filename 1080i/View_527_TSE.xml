				<content target="ListItem.DBTYPE(season)" sortby="year" sortorder="ascending">$INFO[Container(527).ListItem.FolderPath]</content>
			</control>

			<!-- episodes -->
			<control type="fixedlist" id="5127">
				<top>0</top>
				<height>95.3%</height>
				<left>53%</left>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<movement>0</movement>
				<focusposition>0</focusposition>
				<onleft>5027</onleft>
				<onright>noop</onright>
				<onup>5127</onup>
				<ondown>5127</ondown>
				<visible>Container.Content(tvshows)</visible>
				<itemlayout  width="860" height="120">
					<control type="image">
						<animation effect="fade" end="30" time="0" reversible="false" condition="!Control.HasFocus(5127)">Conditional</animation>
						<top>635</top>
						<left>90</left>
						<width>100</width>
						<height>100</height>
						<texture background="true" diffuse="diffuse/roundmask.png">$VAR[RoundImage]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
					</control>
					<control type="group">
						<top>635</top>
						<right>0</right>
						<width>50</width>
						<height>50</height>
						<include>WatchedIndicatorSmall</include>
						<animation effect="fade" end="30" time="0" reversible="false" condition="!Control.HasFocus(5127)">Conditional</animation>
					</control>
					<control type="label">
						<animation effect="fade" end="30" time="0" reversible="false" condition="!Control.HasFocus(5127)">Conditional</animation>
						<top>635</top>
						<left>210</left>
						<width>645</width>
						<height>60</height>
						<font>Reg26</font>
						<align>left</align>
						<textcolor>$VAR[ToggleNetflixViewDetailsTextColor]</textcolor>
						<label>$INFO[ListItem.Episode,Ep. , : ]$INFO[ListItem.Title,, • ]$VAR[ListItemDuration]</label>
					</control>
				</itemlayout>
				<focusedlayout width="900" height="120">
					<control type="group">
						<posy>0</posy>
						<visible>Control.HasFocus(5127)</visible>
						<control type="image">
							<fadetime>350</fadetime>
							<width>896</width>
							<height>504</height>
							<right>0</right>
							<texture background="true" diffuse="special://home/addons/resource.images.backgroundoverlays.basic/resources/Right Corner.png">$VAR[LandscapeImage]</texture>
							<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						</control>
						<control type="progress">
							<right>40</right>  
							<top>400</top>
							<description>progress bar</description>
							<width>85%</width>
							<height>4%</height>
							<align>center</align>
							<texturebg colordiffuse="grey" border="2">colors/color_white.png</texturebg>
							<lefttexture>-</lefttexture>
							<midtexture colordiffuse="$VAR[NetfixViewHighlightTextColor]" border="2">colors/color_white.png</midtexture>
							<righttexture>-</righttexture>
							<visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
							<info>ListItem.PercentPlayed</info>
						</control>
						<control type="textbox">
							<width>85%</width>
							<left>100</left>
							<align>left</align>
							<top>355</top>
							<height>40</height>
							<align>justify</align>
							<font>Bold30</font>
							<autoscroll>true</autoscroll>
							<textcolor>$VAR[ToggleNetflixViewDetailsTextColor]</textcolor>
							<label>[UPPERCASE]$INFO[ListItem.TVShowTitle,, • ][/UPPERCASE]$VAR[WideView_LargeSeasonLabel,s,]$VAR[WideView_LargeEpisodeLabel,e,]$INFO[ListItem.Title, • ,]</label>
						</control>
						<control type="textbox">
							<left>100</left>
							<width>750</width>
							<top>410</top>
							<height>155</height>
							<align>justify</align>
							<font>Reg26</font>
							<textcolor>$VAR[ToggleNetflixViewDetailsTextColor]</textcolor>
							<label>$VAR[Plots]</label>
							<autoscroll delay="2000" time="4000" repeat="2000">true</autoscroll>
						</control>
					</control>
					<control type="group">
						<animation effect="fade" end="30" time="0" reversible="false" condition="!Control.HasFocus(5127)">Conditional</animation>
						<top>640</top>
						<left>70</left>
						<width>780</width>
						<height>120</height>
						<control type="image">
							<height>110</height>
							<width>790</width>
							<texture border="5">diffuse/panel.png</texture>
							<colordiffuse>$VAR[NetflixViewDetailsPanelColor]</colordiffuse>
							<visible>Control.HasFocus(5127)</visible>
						</control>
						<control type="image">
							<!--cdart image-->
							<top>5</top>
							<left>20</left>
							<width>100</width>
							<height>100</height>
							<texture background="true" diffuse="diffuse/roundmask.png" fallback="defaultcovers/cd_big.png">$VAR[RoundImage]</texture>
							<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
						</control>
						<control type="group">
							<right>-10</right>
							<width>50</width>
							<height>50</height>
							<include>WatchedIndicatorSmall</include>
						</control>
						<control type="label">
							<left>138</left>
							<width>645</width>
							<aligny>center</aligny>
							<height>60</height>
							<align>left</align>
							<font>Bold30</font>
							<textcolor>$VAR[ToggleNetflixViewDetailsTextColor]</textcolor>
