							<left>102</left>
							<width>430</width>
							<height>205</height>
							<aspectratio aligny="center" align="center">keep</aspectratio>
							<texture background="true">$VAR[527_Schow]</texture>
						</control>
					</control>
				</focusedlayout>
				<!-- clear art -->
