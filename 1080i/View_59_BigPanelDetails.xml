<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_59_BigPanelDetails">
	
    <control type="group">
      <visible>Control.IsVisible(59)</visible>
      <include>animation_view_change</include>
	 
	  <!-- details -->
      <include>MovieDetailsLeft</include>
	 
      <control type="panel" id="59">
        <animation effect="slide" end="-627" time="250" condition="Skin.HasSetting(View59_ShowInfoRight)">Conditional</animation>
        <viewtype label="31428">mediainfo</viewtype>
        <right>30</right>
        <include condition="!Skin.HasSetting(View59_ShowCDart)">bottom_view59</include>
		<include condition="Skin.HasSetting(View59_ShowCDart)">bottom_view59_disk</include>
		<height>810</height>
        <width>1190</width>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
        <onup>59</onup>
        <ondown>59</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>String.IsEqual(Window(Home).Property(SkinHelper.ForcedView),59) | String.IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
        <itemlayout height="395" width="268" condition="Skin.HasSetting(View59_ShowCDart)">
          <control type="group">
            <width>238</width>
			<bottom>9%</bottom>		  
            <height>342</height>
            <include>PosterPanelLayout</include>
          </control>
        </itemlayout>
        <focusedlayout height="405" width="268" condition="Skin.HasSetting(View59_ShowCDart)">
          <control type="group">
            <width>251</width>
            <height>365</height>
			<right>20</right>
			<bottom>10%</bottom>
            <include>PosterPanelLayoutFocus</include>
            <include>AutoTrailerButton</include>
          </control>
		  
		<control type="image">
				<posx>120</posx>
				<posy>190</posy>
				<width>200</width>
				<height>200</height>
				<aligny>center</aligny>
				<fadetime>300</fadetime>
				<animation effect="rotate" end="-360" center="auto" time="13000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
				<animation effect="fade" start="0" end="100" delay="800" time="1200" reversible="false"></animation>
				<texture background="true" diffuse="diffuse/cdmask_medium_new.png" fallback="defaultcovers/cd_medium.png" border="5">$VAR[DiscArtImage]</texture>
				<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
				<visible>Skin.HasSetting(View59_ShowCDart)</visible>
		</control>			   
        </focusedlayout>
		<itemlayout height="405" width="268" condition="!Skin.HasSetting(View59_ShowCDart)">
          <control type="group">
            <width>100%</width>  
            <height>100%</height>
            <include>PosterPanelLayout</include>
          </control>
        </itemlayout>
        <focusedlayout height="405" width="268" condition="!Skin.HasSetting(View59_ShowCDart)">
          <control type="group">
            <width>100%</width>
            <height>100%</height>
            <include>PosterPanelLayoutFocus</include>
            <include>AutoTrailerButton</include>
          </control>		   
        </focusedlayout>
      </control>
	  
		<!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(59) + Integer.IsGreater(Container.Numitems,0)</visible>
			<right>15</right>
			 <bottom>125</bottom>
			<height>770</height>
			<onup>60</onup>
			<ondown>6000</ondown>
			<onleft>59</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
		</control>
    </control>

  </include>
	<include name="bottom_view59">
		<bottom>11.2%</bottom>
	</include>
	<include name="bottom_view59_disk">
		<bottom>8%</bottom>
	</include>	   
</includes>
